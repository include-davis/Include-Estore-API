generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Authentication {
  id       String @id @default(uuid())
  email    String
  password String
}

model Products {
  id                   String  @id @default(uuid())
  name                 String
  price                Int
  description          String
  details              String
  weight               Int
  height               Int
  width                Int
  depth                Int
  special_label_needed Boolean
}

model User {
  //this user model takes in email, password, address, city, country, and zipCode
  id        String   @id @default(uuid())
  name      String
  email     String   @unique //im unsure if we would need the user information
  password  String
  address   String
  city      String
  country   String
  zipCode   String
  createdAt DateTime @default(now()) //when we created the user
  updatedAt DateTime @updatedAt //when the user was uodated
}
