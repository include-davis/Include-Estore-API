generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inventory {
  id                Int     @id @default(autoincrement())
  inventoryId       Int     @unique
  product           Product @relation(fields: [inventoryId], references: [id])
  availableQuantity Int
  costOfProduction  Int
  loadTime          Int
  reorderPoint      Int
  reorderQuantity   Int
  safetyStock       Int
  stockOnOrder      Int
}

enum OrderStatus {
  PENDING
  COMPLETED
}

model Order {
  id                   Int         @id @default(autoincrement())
  customerName         String
  customerEmail        String
  customerPhoneNum     String
  billingAddressLine1  String
  billingAddressLine2  String
  billingCity          String
  billingZip           String
  billingCountry       String
  shippingAddressLine1 String
  shippingAddressLine2 String
  shippingCity         String
  shippingZip          String
  shippingCountry      String
  status               OrderStatus
  createdAt            DateTime    @default(now())

  ProductToOrder ProductToOrder[]
}

model Product {
  id                 Int              @id @default(autoincrement())
  inventory          Inventory?
  name               String?
  price              Int
  description        String
  details            String
  weight             Int
  height             Int
  width              Int
  depth              Int
  specialLabelNeeded Boolean
  ProductToOrder     ProductToOrder[]
  ProductoToTag      ProductoToTag[]
}

model ProductToOrder {
  productId Int
  orderId   Int
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  order     Order   @relation(fields: [orderId], references: [id])

  @@id(name: "id", fields: [productId, orderId])
}

model ProductoToTag {
  productId Int
  tagName   String
  product   Product @relation(fields: [productId], references: [id])
  tag       Tag     @relation(fields: [tagName], references: [name])

  @@id(name: "id", fields: [productId])
}

model Tag {
  name          String          @unique
  ProductoToTag ProductoToTag[]
}

model User {
  Id                   Int     @id @default(autoincrement())
  name                 String?
  email                String  @unique
  password             String
  shippingAddressLine1 String
  shippingAddressLine2 String
  shippingCity         String
  shippingZip          String
  shippingCountry      String
}
