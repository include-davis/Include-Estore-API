model Inventory {
  id                      String  @id @unique
  product                 Product @relation("product_inventory", fields: [id], references: [id], onDelete: Cascade)
  available_quantity      Int
  cost_of_production      Float
  lead_time               Int
  reorder_point           Int
  reorder_quantity        Int
  safety_stock            Int
  stock_on_order          Int
}