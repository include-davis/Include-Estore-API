model Product {
  id                   String        @id @default(uuid())
  inventory            Inventory?    @relation("product_inventory")
  tags                 ProductToTag[] @relation("product_tag")
  name                 String
  price                Float
  description          String
  details              String
  weight               Int
  height               Int
  width                Int
  depth                Int
  special_label_needed Boolean
}